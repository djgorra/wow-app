// Sass variable overrides must be declared before loading up Active Admin's styles.
//
// To view the variables that Active Admin provides, take a look at
// `app/assets/stylesheets/active_admin/mixins/_variables.scss` in the
// Active Admin source.
//
// For example, to change the sidebar width:
// $sidebar-width: 242px;

// Active Admin's got SASS!
@import "active_admin/mixins";
@import "active_admin/base";

// Overriding any non-variable Sass must be done after the fact.
// For example, to change the default status-tag color:
//
//   .status_tag { background: #6090DB; }
body.active_admin.logged_out {
    background: url(<%= asset_path("admin_login_bg.png") %>) no-repeat center center fixed;
    background-size: contain;
    background-repeat: no-repeat; 
    background-color: #020b10;
    div.flash {
        background-color:white;
        padding: 10px;  
        margin:10px;      
    }
    #active_admin_content {
        border-radius: 20px;
    }
}

.center {
  position: absolute;
  left: 50%;
  top: 80%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  padding:40px;
  text-align:center;
}

div#active_admin_content {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  padding:40px;
  text-align:center;
}

.center a {
    padding-top: 25px;
    width: 367px;
    height:73px;
    background-image: url(<%= asset_path("admin_login_blank.png") %>);
    color: #f8e7dd;
    display:block;
    font-size:20px;
    font-weight:bold;
    text-decoration:none;
}
a:hover {
    text-decoration:underline;
}


